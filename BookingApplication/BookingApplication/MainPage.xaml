                                            <GradientStop Color="#C8528B" Offset="0.95" />
                                        </LinearGradientBrush>
                                    </BoxView.Background>
                                </BoxView>

                                <StackLayout HorizontalOptions="CenterAndExpand"
                                             VerticalOptions="StartAndExpand"
                                                 Margin="15">
