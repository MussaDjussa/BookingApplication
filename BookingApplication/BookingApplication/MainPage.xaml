                                    <BoxView.Background>
                                        <LinearGradientBrush StartPoint="1,0" EndPoint="1,1">
                                            <GradientStop Color="Transparent" Offset="0.2"/>
                                            <GradientStop Color="#CC00FF" Offset="0.95" />
                                        </LinearGradientBrush>
                                    </BoxView.Background>
                                </BoxView>

                                <StackLayout Margin="20"
