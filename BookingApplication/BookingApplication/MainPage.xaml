                                               HorizontalOptions="CenterAndExpand"
                                               FontSize="24"/>
                                </StackLayout>
                            </Grid>

                        </Frame>
                        <Frame BackgroundColor="White"
                                     Grid.Column="1"
                                     CornerRadius="15"
                                    Padding="0">
                            <Grid Padding="0">
