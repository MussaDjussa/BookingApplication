                                    <Label Text="ЗАЛ" TextColor="#A252C8" FontSize="20" Padding="0"/>
                                    <Label Text="STANDART" TextColor="#A252C8" FontSize="22" Padding="0"
                                           FontAttributes="Bold"/>
                                </StackLayout>
                            </Grid>
                        </Frame>
                        <Frame BackgroundColor="White"
                                     Grid.Column="1"
                                     Grid.Row="1"
                                   CornerRadius="15"
                                   Padding="0">
